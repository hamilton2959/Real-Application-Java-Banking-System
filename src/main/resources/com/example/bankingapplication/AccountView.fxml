<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.bankingapplication.controllers.AccountController" spacing="10" style="-fx-padding: 20;">

    <Label text="Account Management" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Separator/>

    <!-- Input Form -->
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Label text="Account Number:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="accountNumberField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Account Type:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="accountTypeCombo" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="SAVINGS"/>
                    <String fx:value="CURRENT"/>
                    <String fx:value="FIXED_DEPOSIT"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Label text="Initial Balance:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="balanceField" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="0.00"/>

        <Label text="Interest Rate (%):" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <TextField fx:id="interestRateField" GridPane.columnIndex="3" GridPane.rowIndex="0" promptText="0.00"/>

        <Label text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <ComboBox fx:id="statusCombo" GridPane.columnIndex="3" GridPane.rowIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="ACTIVE"/>
                    <String fx:value="INACTIVE"/>
                    <String fx:value="FROZEN"/>
                </FXCollections>
            </items>
        </ComboBox>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Create Account" onAction="#handleCreateAccount" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button text="Update Account" onAction="#handleUpdateAccount" style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
        <Button text="Delete Account" onAction="#handleDeleteAccount" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        <Button text="Clear" onAction="#handleClear" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
    </HBox>

    <Label fx:id="messageLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    <Separator/>

    <!-- Account Table -->
    <Label text="Account List" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TableView fx:id="accountTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colAccountNumber" text="Account Number" prefWidth="150"/>
            <TableColumn fx:id="colAccountType" text="Type" prefWidth="120"/>
            <TableColumn fx:id="colBalance" text="Balance" prefWidth="120"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
            <TableColumn fx:id="colInterestRate" text="Interest Rate" prefWidth="120"/>
            <TableColumn fx:id="colOpeningDate" text="Opening Date" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>
